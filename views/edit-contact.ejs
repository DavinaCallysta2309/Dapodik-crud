<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2><strong>Form ubah data</strong></h2>
            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-secondary" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %></li>
                         
                        <% }) %>
                    </ul>
                  </div>
                  
            <% } %>
            <form method="post" action="/contact/update?_method=PUT">
              <input type="hidden" name="_id" value="<%= contact._id %>" />
              
              <!-- Data yang tidak bisa diedit -->
              <div class="mb-3">
                <label for="nama" class="form-label">Nama</label>
                <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" readonly>
              </div>
              <div class="mb-3">
                <label for="nisn" class="form-label">NISN</label>
                <input type="text" class="form-control" id="nisn" name="nisn" value="<%= contact.nisn %>" readonly>
              </div>
              <div class="mb-3">
                <label for="nik" class="form-label">NIK</label>
                <input type="text" class="form-control" id="nik" name="nik" value="<%= contact.nik %>" readonly>
              </div>
            
              <!-- Data yang bisa diedit -->
              <div class="mb-3">
                <label for="tingkat" class="form-label">Tingkat</label>
                <select class="form-select" name="tingkat" id="tingkat" required>
                  <option value="X" <%= contact.tingkat === 'X' ? 'selected' : '' %>>X</option>
                  <option value="XI" <%= contact.tingkat === 'XI' ? 'selected' : '' %>>XI</option>
                  <option value="XII" <%= contact.tingkat === 'XII' ? 'selected' : '' %>>XII</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="rombel" class="form-label">Rombel</label>
                <select class="form-select" name="rombel" id="rombel" required>
                  <option value="PPLG 1" <%= contact.rombel === 'PPLG 1' ? 'selected' : '' %>>PPLG 1</option>
                  <option value="PPLG 2" <%= contact.rombel === 'PPLG 2' ? 'selected' : '' %>>PPLG 2</option>
                  <option value="RPL 1" <%= contact.rombel === 'RPL 1' ? 'selected' : '' %>>RPL 1</option>
                  <option value="RPL 2" <%= contact.rombel === 'RPL 2' ? 'selected' : '' %>>RPL 2</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="tgl_masuk" class="form-label">Tanggal Masuk</label>
                <input type="date" class="form-control" id="tgl_masuk" name="tgl_masuk" value="<%= contact.tgl_masuk %>" required>
              </div>
              <div class="mb-3">
                <label for="terdaftar" class="form-label">Terdaftar</label>
                <select class="form-select" name="terdaftar" id="terdaftar" required>
                  <option value="Siswa baru" <%= contact.terdaftar === 'Siswa baru' ? 'selected' : '' %>>Siswa baru</option>
                  <option value="Pindahan" <%= contact.terdaftar === 'Pindahan' ? 'selected' : '' %>>Pindahan</option>
                </select>
              </div>
            
              <button type="submit" class="btn btn-primary">Ubah Data</button>
            </form>            
        </div>
    </div>
</div>
